<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/STOCK_LOG_LIST_ITEM_LINEARLAYOUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/STOCK_LOG_LIST_ITEM_CRDATE"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:gravity="center_vertical|left"
                android:layout_gravity="center"
                android:layout_weight="5"/>
        <TextView
                android:id="@+id/STOCK_LOG_LIST_ITEM_WORK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:gravity="center_vertical|left"
                android:layout_weight="6"/>
        <TextView
                android:id="@+id/STOCK_LOG_LIST_ITEM_QTY"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical|right"
                android:layout_weight="6"/>
        <TextView
                android:id="@+id/STOCK_LOG_LIST_ITEM_STOCK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/light_purple"
                android:gravity="center_vertical|right"
                android:layout_weight="6"/>
        <TextView
                android:id="@+id/STOCK_LOG_LIST_ITEM_MEMO"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/light_brown"
                android:gravity="center"
                android:layout_weight="4"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>