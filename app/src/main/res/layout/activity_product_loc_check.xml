<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_RELATIVE_LAYOUT">

        <LinearLayout
                android:background="@color/gray"
                android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_LINEARLAYOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:text="로케이션"
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_RESULT_TITLE_TEXT_VIEW"
                    android:layout_width="match_parent"
                    android:layout_weight="2.5"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_height="30dp"/>

            <EditText
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_LOC_EDIT_TEXT"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_box"/>

            <Button
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_LOC_SEARCH_BTN"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="2.5"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="8dp"
                    android:textSize="10dp"
                    android:text="조회"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_LINEAR_LAYOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_LINEARLAYOUT"
                android:background="@color/gray">
            <TextView
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_TEXTVIEW"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2.5"
                    android:text="바코드"/>
            <EditText
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_EDITTEXT"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_white_box"/>
            <Button
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_SEARCH_BTN"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="10dp"
                    android:layout_marginLeft="-10dp"
                    android:gravity="center"
                    android:text="조 회"
                    android:layout_weight="2.5"
                    android:layout_marginRight="8dp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_MESSAGE_LINEAR_LAYOUT"
                android:layout_below="@+id/PRODUCT_LOC_CHECK_ACTIVITY_BARCODE_LINEAR_LAYOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/gray">
            <TextView
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_STOCK_TEXTVIEW"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:text="메세지"/>
            <EditText
                    android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_MESSAGE_EDITTEXT"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_box"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_HEADER_LINEARLAYOUT"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_below="@+id/PRODUCT_LOC_CHECK_ACTIVITY_MESSAGE_LINEAR_LAYOUT"
                android:background="@drawable/text_underline_gray">
            <TextView
                    android:text="이미지"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|left"
                    android:layout_weight="4"/>

            <TextView
                    android:text="상품명 / 옵션"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>
            <TextView
                    android:text="재고"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_weight="4"/>
        </LinearLayout>
        <ListView
                android:id="@+id/PRODUCT_LOC_CHECK_ACTIVITY_LISTVIEW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/PRODUCT_LOC_CHECK_ACTIVITY_HEADER_LINEARLAYOUT"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>