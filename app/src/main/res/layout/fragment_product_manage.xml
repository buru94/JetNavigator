<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

        <Button
                android:layout_width="250dp"
                android:text="LOC지정"
                android:id="@+id/PRODUCT_MANAGE_FRAGMENT_LOC_APPOINT_BTN"
                android:background="@drawable/button"
                style="@style/Menu_Button"/>

        <Button
                android:layout_width="250dp"
                android:text="LOC이동"
                android:id="@+id/PRODUCT_MANAGE_FRAGMENT_LOC_MOVE_BTN"
                android:layout_below="@+id/PRODUCT_MANAGE_FRAGMENT_LOC_APPOINT_BTN"
                android:background="@drawable/button"
                style="@style/Menu_Button"/>
        <Button
                android:layout_width="250dp"
                android:text="LOC확인"
                android:id="@+id/PRODUCT_MANAGE_FRAGMENT_LOC_CONFIRM_BTN"
                android:layout_below="@+id/PRODUCT_MANAGE_FRAGMENT_LOC_MOVE_BTN"
                android:background="@drawable/button"
                style="@style/Menu_Button"/>
        <Button
                android:layout_width="250dp"
                android:text="상품조회"
                android:id="@+id/PRODUCT_MANAGE_FRAGMENT_PRODUCT_SEARCH_BTN"
                android:layout_below="@id/PRODUCT_MANAGE_FRAGMENT_LOC_CONFIRM_BTN"
                android:background="@drawable/button"
                style="@style/Menu_Button"/>
        <Button
                android:layout_width="250dp"
                android:text="상품목록"
                android:id="@+id/PRODUCT_MANAGE_FRAGMENT_PRODUCT_LIST_BTN"
                android:layout_below="@id/PRODUCT_MANAGE_FRAGMENT_PRODUCT_SEARCH_BTN"
                android:background="@drawable/button"
                style="@style/Menu_Button"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>