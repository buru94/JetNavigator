<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >

    <ImageView
            android:id="@+id/PRODUCT_LIST_ACTIVITY_GRID_IMAGEVIEW"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
                android:id="@+id/PRODUCT_LIST_ACTIVITY_SOLDOUT_TEXTVIEW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="품 절"
                android:gravity="center"
                android:textSize="30dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="93dp"/>

        <TextView
                android:id="@+id/PRODUCT_LIST_ACTIVITY_BLANK_TEXTVIEW"
                android:layout_below="@+id/PRODUCT_LIST_ACTIVITY_GRID_IMAGEVIEW"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                android:layout_height="5dp"/>


    <TextView
            android:id="@+id/PRODUCT_LIST_ACTIVITY_GRID_PRID"
            android:layout_below="@+id/PRODUCT_LIST_ACTIVITY_BLANK_TEXTVIEW"
            android:layout_width="match_parent"
            style="@style/ProductListTextView"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/PRODUCT_LIST_ACTIVITY_GRID_PRNAME"
            android:layout_below="@+id/PRODUCT_LIST_ACTIVITY_GRID_PRID"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            style="@style/ProductListTextView"/>
    <TextView
            android:id="@+id/PRODUCT_LIST_ACTIVITY_GRID_OWNER"
            android:layout_below="@+id/PRODUCT_LIST_ACTIVITY_GRID_PRNAME"
            style="@style/ProductListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>