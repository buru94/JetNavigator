<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <layer-list>
            <item
                    android:right="-5dp"
                    android:left="-5dp"
                    android:top="-5dp"
                    android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background" /> <!-- 배경 -->
                    <stroke android:width="1dip" android:color="@color/black" />
                </shape>
            </item>
            <!-- 회살표를 넣기위해-->
            <item android:right="10dp">
                <bitmap android:src="@android:drawable/arrow_down_float"  android:gravity="center_vertical|right" />
            </item>
        </layer-list>
    </item>
</selector>